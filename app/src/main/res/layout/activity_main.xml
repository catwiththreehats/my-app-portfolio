<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My Nanodegree Apps"
                android:id="@+id/textView"
                android:layout_column="11"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:textAlignment="gravity"
                android:phoneNumber="false"
                android:typeface="monospace" />
        </TableRow>

        <Button
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:text="SpotifyStreamer"
            android:id="@+id/buttonSpotifyStream"
            android:layout_marginTop="59dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="displaySpotifyStreamer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores App"
            android:id="@+id/buttonScoresApp"
            android:layout_below="@+id/buttonSpotifyStream"
            android:layout_alignLeft="@+id/buttonSpotifyStream"
            android:layout_alignStart="@+id/buttonSpotifyStream"
            android:layout_alignRight="@+id/buttonSpotifyStream"
            android:layout_alignEnd="@+id/buttonSpotifyStream"
            android:onClick="displaySpotifyStreamer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library App"
            android:id="@+id/buttonLibraryApp"
            android:layout_below="@+id/buttonScoresApp"
            android:layout_alignLeft="@+id/buttonScoresApp"
            android:layout_alignStart="@+id/buttonScoresApp"
            android:layout_alignRight="@+id/buttonScoresApp"
            android:layout_alignEnd="@+id/buttonScoresApp"
            android:onClick="displaySpotifyStreamer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buttonBuildItBigger"
            android:layout_below="@+id/buttonLibraryApp"
            android:layout_alignLeft="@+id/buttonLibraryApp"
            android:layout_alignStart="@+id/buttonLibraryApp"
            android:layout_alignRight="@+id/buttonLibraryApp"
            android:layout_alignEnd="@+id/buttonLibraryApp" android:onClick="displaySpotifyStreamer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XYZ Reader"
            android:id="@+id/buttonXYZReader"
            android:layout_below="@+id/buttonBuildItBigger"
            android:layout_alignLeft="@+id/buttonBuildItBigger"
            android:layout_alignStart="@+id/buttonBuildItBigger"
            android:layout_alignRight="@+id/buttonBuildItBigger"
            android:layout_alignEnd="@+id/buttonBuildItBigger" android:onClick="displaySpotifyStreamer"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/buttonCapstone"
            android:layout_column="11" android:onClick="displaySpotifyStreamer"/>

    </TableLayout>
</RelativeLayout>
